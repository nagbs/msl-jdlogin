/**
 * Function (box_hover) is used to show and hide.
 * used on Dashboard
 * 
 * @return null.
*/
function box_hover(clickClass, hoverClass)
{
	$("."+clickClass).hover(
		function () {
			$(this).addClass(hoverClass);
		}, 
		function () {
			$(this).removeClass(hoverClass);
		}
	);
}
